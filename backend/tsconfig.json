{
  "compilerOptions": {
    
    "rootDir": "./src",
    "outDir": "./dist",

    
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6"],
    "types": ["node"],

    
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    
  },
  "include": ["src"]
}
